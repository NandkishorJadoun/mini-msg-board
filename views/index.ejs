<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include("header") %>
        <main>
            <% messages.forEach(msg=>{ %>
                <div class="message-card">

                    <h2>
                        <%= msg.text %>
                    </h2>

                    <p>
                        <%= msg.user %>
                    </p>

                    <p>
                        <%= msg.added %>
                    </p>

                    <a href=<%=(" /message/" + msg.id) %> >
                        <button>Open</button>
                    </a>
                </div>
                <% }) %>
        </main>

</body>

</html>